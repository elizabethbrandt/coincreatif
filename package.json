    "@stripe/stripe-js": "^1.13.1",
    "axios": "^0.18.0",
    "express": "^4.16.3",
    "if-env": "^1.0.4",
    "mongoose": "^5.3.16",
    "react-stripe-elements": "^6.1.2",
    "stripe": "^8.137.0"
  }
}
